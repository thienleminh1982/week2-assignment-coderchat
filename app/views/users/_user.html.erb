<div class="col-xs-12 col-md-4">
  <div class="card card-<%= cycle('male', 'female') %>">
    <%= image_tag user.try(:image_url), width: '150px', height: '150px' %>
    <div class="card-block">
      <h4 class="card-title"><%= user.try(:name) %></h4>
      <a href="<%= manage_friends_path %>?add_friend=<%= user.try(:id) %>" class="btn btn-primary">Add friend</a>
    </div>
  </div>
</div>