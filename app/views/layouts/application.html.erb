<!DOCTYPE html>
<html>
<head>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>    
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tag %>
</head>
<body class="<%= controller_name%> <%= action_name %>">
  <div class="nofif">
    <%= flash_messages %>
  </div>

  <nav class="navbar navbar-light bg-faded">

    <!-- Toggle Button -->
    <button class="navbar-toggler hidden-sm-up" type="button" data-toggle="collapse" data-target="#nav-content">
      &#9776;
    </button>
    <!-- Nav Content -->
    <div class="collapse navbar-toggleable-xs" id="nav-content">
      <a class="navbar-brand" href="/"><%= image_tag 'logo-small' %></a>
      <ul class="nav navbar-nav">
        <li class="nav-item">
          <% if signed_in? %>
            <li class="nav-item">
              <%= link_to 'Incoming messages', messages_path, {:class => 'nav-link'} %>
            </li>
            <li class="nav-item">
              <%= link_to 'New message', new_message_path, {:class => 'nav-link'} %>
            </li>
            <li class="nav-item">
              <%= link_to 'Sent messages', sent_messages_path, {:class => 'nav-link'} %>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="<%= users_path %>">Browse Profiles</a>
            </li>
            <li class="nav-item">
              <%= link_to 'Friend list', friends_path, {:class => 'nav-link'} %>
            </li>
            <li class="nav-item">
              <%= link_to 'Manage friends', manage_friends_path, {:class => 'nav-link'} %>
            </li>
            <%= link_to 'Sign Out', logout_path, {:class => 'nav-link'} %>
        <% else %>
            <li class="nav-item">
              <%= link_to 'Sign Up', new_user_path, {:class => 'nav-link'} %>
            </li>
            <%= link_to 'Sign In', sessions_new_path, {:class => 'nav-link'} %>
        <% end %>

        </li>

      </ul>
    </div>
  </nav>

  <%= yield %>

  <footer class="footer-12">
    <div class="container">
        Made with <%= image_tag('heart') %> in Sai Gon
    </div>
  </footer>    

</body>
</html>
